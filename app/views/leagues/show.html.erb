<div class="container">

    <h2><%=@league.name %></h2>
    <p><%= @league.description %></p>
    <p><%= @league.start_on %></p>
    <p><%= @league.end_on %></p>
    <p><%= @league.game.name %></p>
    <p><%= @league.game.genre %></p>
    <p><%= @league.game.description %></p>

 <h1>Rankings</h1>
    <table>
      <thead>
        <tr>
          <th><p> Rank </p></th>
          <th><p> Player </p></th>
          <th><p> Challenges Completed </p></th>
          <th><p> Score </p></th>
        </tr>
      </thead>
      <tbody>
        <% @player_rankings.each_with_index do |player, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= player.steam_username %></td>
            <td><%= player.challenges %></td>
            <td><%= player.score %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
---------
 <div>
    <%= link_to 'Back', leagues_path, class: "btn btn-secondary" %>
    <%= link_to 'Delete your league', league_path(@league), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
 </div>
</div>
