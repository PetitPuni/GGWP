<div class="table-container" data-league-target="leagueChallenges">
   <% if league.started? %>
    <h3>Challenges</h3>
    <table>
      <thead>
          <tr>
          <th>Name</th>
          <th>Points</th>
          </tr>
      </thead>
      <tbody>
        <% challenges.each do |challenge| %>
          <tr>
            <td class><%= challenge.name %></td>
            <td><%= challenge.points %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>Wait for Challenges you must üê∏</p>
  <% end %>
</div>
