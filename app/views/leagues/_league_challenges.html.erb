<div data-league-target="leagueChallenges">
   <% if league.started? %>
    <h3><%= league.name %> Challenges</h3>
    <table>
      <thead>
          <tr>
          <th>Name</th>
          <th>Points</th>
          </tr>
      </thead>
      <tbody>
        <% challenges.each do |challenge| %>
          <tr>
            <td class><%= challenge.name %></td>
            <td><%= challenge.points %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>Challenges are comming ğŸ˜</p>
  <% end %>
</div>
