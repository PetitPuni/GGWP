
 <div class="ranking" data-league-target="ranking">
  <% if league.started? %>
    <h3>Rankings</h3>
    <table>
      <thead>
        <tr>
          <th><p> Rank </p></th>
          <th><p> Player </p></th>
          <!--<th><p> Challenges Completed </p></th>-->
          <th><p> Score </p></th>
        </tr>
      </thead>
      <tbody>
        <% player_rankings.each_with_index do |player, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= player.steam_username %></td>
            <!--<td><%= player.challenges.name %></td>-->
            <td><%= player.score %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
